<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">All our Flats (<%= @flats.count %>)</h1>
    <%= link_to 'Add Flat', new_flat_path, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <% if flat.picture_url.present? %>
            <img src="<%= flat.picture_url %>" class="card-img-top" alt="<%= flat.name %>">
          <% else %>
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Placeholder">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="d-flex justify-content-start text-muted mb-2">
              <span class="me-3">
                <i class="fa fa-user"></i> <%= flat.number_of_guests %>
              </span>
              <span>
                <i class="fa fa-euro-sign"></i> <%= flat.price_per_night %>
              </span>
            </div>
          </div>
          <div class="card-footer bg-transparent border-top-0">
            <%= link_to 'More info', flat, class: 'btn btn-link text-primary p-0 me-3' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-link text-warning p-0 me-3' %>
            <%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link text-danger p-0' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
